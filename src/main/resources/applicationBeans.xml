<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="tk.handsome0hell.blog.articles.DatabaseArticlesComponent"></bean>

  <bean class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="mapperInterface" value="tk.handsome0hell.blog.articles.ArticlesRepository" />
    <property name="sqlSessionFactory" ref="sqlSessionFactory" />
  </bean>

  <bean class="tk.handsome0hell.blog.user.DatabaseUsersComponent"></bean>

  <bean class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="mapperInterface" value="tk.handsome0hell.blog.user.UsersRepository" />
    <property name="sqlSessionFactory" ref="sqlSessionFactory" />
  </bean>

  <bean class="tk.handsome0hell.blog.permission.UserIdLoginComponent"></bean>
  <bean class="tk.handsome0hell.blog.permission.DatabasePermissionComponent"></bean>

  <bean class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="mapperInterface" value="tk.handsome0hell.blog.permission.PermissionManagementRepository" />
    <property name="sqlSessionFactory" ref="sqlSessionFactory" />
  </bean>

  <bean class="org.mybatis.spring.mapper.MapperFactoryBean">
    <property name="mapperInterface" value="tk.handsome0hell.blog.permission.PermissionVerificationRepository" />
    <property name="sqlSessionFactory" ref="sqlSessionFactory" />
  </bean>

</beans>
